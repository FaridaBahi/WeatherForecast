<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".settings.view.Settings">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLocation"
        android:layout_width="157dp"
        android:layout_height="43dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:background="@color/light_blue"
        android:backgroundTint="@color/light_blue"
        app:cardCornerRadius="50dp"
        app:cardMaxElevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/loaction"
            android:textColor="@color/white_used"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="164dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#878282"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewLocation"
        app:layout_constraintStart_toStartOf="@+id/cardViewLocation"
        app:layout_constraintTop_toBottomOf="@+id/cardViewLocation">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start">

            <RadioButton
                android:id="@+id/gps_radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps"
                android:textColor="@color/white_used"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/map_radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/maps"
                android:textColor="@color/white_used"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RadioGroup>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLanguage"
        android:layout_width="157dp"
        android:layout_height="43dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:background="@color/light_blue"
        android:backgroundTint="@color/light_blue"
        app:cardCornerRadius="50dp"
        app:cardMaxElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/language"
            android:textColor="@color/white_used"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="164dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#878282"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewLanguage"
        app:layout_constraintStart_toStartOf="@+id/cardViewLanguage"
        app:layout_constraintTop_toBottomOf="@+id/cardViewLanguage">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start">

            <RadioButton
                android:id="@+id/arabic_radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arabic"
                android:textColor="@color/white_used"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/english_radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/english"
                android:textColor="@color/white_used"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RadioGroup>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTemp"
        android:layout_width="157dp"
        android:layout_height="43dp"
        android:layout_marginTop="30dp"
        android:background="@color/light_blue"
        android:backgroundTint="@color/light_blue"
        app:cardCornerRadius="50dp"
        app:cardMaxElevation="2dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView5"
        app:layout_constraintStart_toStartOf="@+id/cardView5"
        app:layout_constraintTop_toBottomOf="@+id/cardView5">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/temprature"
            android:textColor="@color/white_used"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="#878282"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewTemp"
        app:layout_constraintStart_toStartOf="@+id/cardViewTemp"
        app:layout_constraintTop_toBottomOf="@+id/cardViewTemp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start">

            <RadioButton
                android:id="@+id/celsius_radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/celsius"
                android:textColor="@color/white_used"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/fahrenheit_radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/fahrenheit"
                android:textColor="@color/white_used"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/kelvin_radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/kelvin"
                android:textColor="@color/white_used"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RadioGroup>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewWind"
        android:layout_width="157dp"
        android:layout_height="43dp"
        android:layout_marginTop="30dp"
        android:background="@color/light_blue"
        android:backgroundTint="@color/light_blue"
        app:cardCornerRadius="50dp"
        app:cardMaxElevation="2dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView6"
        app:layout_constraintStart_toStartOf="@+id/cardView6"
        app:layout_constraintTop_toBottomOf="@+id/cardView6">

        <TextView
            android:id="@+id/textViewWind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/wind"
            android:textColor="@color/white_used"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="164dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#878282"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="@+id/cardViewWind"
        app:layout_constraintStart_toStartOf="@+id/cardViewWind"
        app:layout_constraintTop_toBottomOf="@+id/cardViewWind">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start">

            <RadioButton
                android:id="@+id/meter_radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meter_sec"
                android:textColor="@color/white_used"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/miles_radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/miles_hour"
                android:textColor="@color/white_used"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RadioGroup>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>