<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="230dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="50dp"
    app:cardElevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="110dp"
        android:layout_height="230dp"
        android:background="@color/light_grey">

        <TextView
            android:id="@+id/hour_tv"
            android:layout_width="61dp"
            android:layout_height="37dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white_used"
            android:textSize="25sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_hourly_item"
            android:layout_width="115dp"
            android:layout_height="88dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@+id/hour_tv"
            app:layout_constraintStart_toStartOf="@+id/hour_tv"
            app:layout_constraintTop_toBottomOf="@+id/hour_tv"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/temp_hourly_item"
            android:layout_width="51dp"
            android:layout_height="41dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white_used"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/icon_hourly_item"
            app:layout_constraintStart_toStartOf="@+id/icon_hourly_item"
            app:layout_constraintTop_toBottomOf="@+id/icon_hourly_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>