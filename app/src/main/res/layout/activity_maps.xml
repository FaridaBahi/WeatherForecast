<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".locations.MapsActivity" >

    <SearchView
       android:id="@+id/map_searchh"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:queryHint="Search Here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <fragment
        android:id="@+id/mapFragmentt"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@+id/map_search"
        app:layout_constraintStart_toStartOf="@+id/map_search"
        app:layout_constraintTop_toBottomOf="@+id/map_search">

        <Button
            android:id="@+id/map_buttonn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="Done"
            android:textColor="@color/white_used"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="invisible"/>

    </fragment>
</androidx.constraintlayout.widget.ConstraintLayout>