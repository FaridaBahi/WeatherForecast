<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/intialSetup">

    <fragment
        android:id="@+id/favourites"
        android:name="com.example.myweather.favourites.view.Favourites"
        android:label="Favourites"
        tools:layout="@layout/fragment_favourites" />
    <fragment
        android:id="@+id/settings"
        android:name="com.example.myweather.settings.view.Settings"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/alert"
        android:name="com.example.myweather.alerts.view.Alert"
        android:label="Alerts"
        tools:layout="@layout/fragment_alert" />
    <fragment
        android:id="@+id/home"
        android:name="com.example.myweather.home.view.Home"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home4_to_settings"
            app:destination="@id/settings" />
        <action
            android:id="@+id/action_home4_to_favourites"
            app:destination="@id/favourites" />
        <action
            android:id="@+id/action_home4_to_alert"
            app:destination="@id/alert" />
    </fragment>
    <fragment
        android:id="@+id/intialSetup"
        android:name="com.example.myweather.IntialSetup"
        android:label="fragment_intial_setup"
        tools:layout="@layout/fragment_intial_setup" >
        <action
            android:id="@+id/action_intialSetup_to_home"
            app:destination="@id/home" />
        <action
            android:id="@+id/action_intialSetup_to_mapsActivity2"
            app:destination="@id/mapsActivity" />
    </fragment>
    <activity
        android:id="@+id/mapsActivity"
        android:name="com.example.myweather.locations.MapsActivity"
        android:label="activity_maps"
        tools:layout="@layout/activity_maps" />
</navigation>